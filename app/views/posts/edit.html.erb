<h1> Edit Post Page </h1> 

<% if flash[:errors]%>
<% flash[:errors].each do |error|%>
<%= error %>
<% end %>
<% end %>


<%= form_for @post do |f| %>
<%= f.label :title %><br><br>
<%= f.text_field :title %><br><br>
<%= f.label :content %><br><br>
<%= f.text_field :content %><br><br>
<%= f.label :likes%><br><br>
<%= f.number_field :likes%><br><br>
<%= f.label :blogger_id %>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %>
<%= f.label :destination_id %>
<%= f.collection_select :destination_id, @destinations, :id, :name %>


<%= f.submit%>
<% end %>