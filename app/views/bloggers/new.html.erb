<h1> New Blogger Page </h1> 

<% if flash[:errors]%>
<% flash[:errors].each do |error|%>
<%= error %>
<% end %>
<% end %>


<%= form_for @blogger do |f| %>
<%= f.label :name %><br><br>
<%= f.text_field :name %><br><br>
<%= f.label :age %><br><br>
